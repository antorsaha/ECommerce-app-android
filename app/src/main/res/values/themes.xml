<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerceAppAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonStyle">
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text style for small text in onboarding screen -->
    <style name="onboarding_small_text">
        <item name="fontFamily">@font/source_serif_pro_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Text style for large text in onboarding screen -->
    <style name="onboarding_large_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">@font/dm_serif_display</item>
    </style>
</resources>